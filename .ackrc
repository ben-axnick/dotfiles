# Always color, even if piping to a another program
--color
 
# Make sure ack knows how to search common filetypes used in rails projects
--type-add=css=scss
--type-add=ruby=.haml,.rselm,.feature,.ru,.lock
--type-set=coffeescript=.coffee
--type-set=coffee=.coffee
 
# Make sure ack knows how to search common filetypes used in node.js projects
--ignore-dir=node_modules
--type-set=coffee=.coffee
--type-set=jade=.jade
--type-set=feature=.feature
--type-set=json=.json

# Ignore a wide range of (probably) useless directories
--ignore-dir=.git
--ignore-dir=.svn
--ignore-dir=node_modules
--ignore-dir=db
--ignore-dir=lib/spf
--ignore-dir=dictionary
--ignore-dir=.sass-cache
--ignore-dir=tmp
--ignore-dir=build
--ignore-dir=coverage
--ignore-dir=log
--ignore-dir=build
--ignore-dir=assets/javascripts
--ignore-dir=public/assets
--ignore-dir=.bundle
--ignore-file=is:tags
--ignore-file=is:dictionary
--ignore-file=is:manifest.json

# Extensions we'd never want to grep
--ignore-file=ext:pdf
--ignore-file=ext:min.js

# Useless for Marketplace FE
--ignore-dir=server-build
